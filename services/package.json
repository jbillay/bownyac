{
  "name": "bownyac-services",
  "version": "0.0.1",
  "description": "Services for the new application",
  "main": "index.js",
  "author": "Jeremy Billay",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbillay/bownyac.git"
  },
  "scripts": {
    "start": "nodemon index.js",
    "test": "jest --forceExit",
    "lint": "./node_modules/.bin/eslint --fix **/*.js && prettier --write \"**/*.js\"",
    "precommit": "lint-staged"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!index.js",
      "!**/node_modules/**",
      "!**/config/**",
      "!**/.config/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "node_modules/**/node_modules"
    ],
    "delay": "2500"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "debug": "^3.1.0",
    "jsonwebtoken": "^8.2.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-generic-session": "^2.0.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.3.1",
    "koa-redis": "^3.1.2",
    "koa-respond": "^1.0.1",
    "koa-route": "^3.2.0",
    "koa-router": "^7.4.0",
    "mongodb": "^3.0.1",
    "mongoose": "^5.0.6",
    "winston": "^3.0.0-rc3",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-eslint": "^8.2.2",
    "cross-env": "^5.1.4",
    "eslint": "^4.18.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.15.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0"
  }
}
